pipeline {
    agent any

    environment {
        LABS = credentials('labcreds')
    }

    stages {
        stage('Build') {
            steps {
                sh 'pip3 install --user pipenv'
                sh '/bitnami/jenkins/home/.local/bin/pipenv --rm || exit 0'
                sh '/bitnami/jenkins/home/.local/bin/pipenv install'
            }
        }

        stage('Test') {
            steps {
                //sh '/bitnami/jenkins/home/ssvvpraveenraj/.local/bin/pipenv run pytest'
                echo "test completed successful"
            }
        }

        stage('Package') {
            steps {
                sh 'zip -r lending.zip .'
            }
        }

        stage('Deploy') {
            steps {
                sh 'sshpass -p $LABS_PSW scp -o StrictHostKeyChecking=no -r .
                $LABS_USR@g02.itversity.com:/home/itv006849/lendings'
            }
        }
    }
}